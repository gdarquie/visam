<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Localisation" table="localisation">
    <id name="localisationId" type="integer" column="localisation_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nom" type="string" column="nom" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="lat" type="string" column="lat" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="long" type="string" column="long" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="text" column="description" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Pour éventuellement écrire l’adresse
</option>
      </options>
    </field>
    <field name="ville" type="string" column="ville" length="500" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="code" type="integer" column="code" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">Le code postal </option>
      </options>
    </field>
    <field name="adresse" type="string" column="adresse" length="500" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="region" type="string" column="region" length="500" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="pays" type="string" column="pays" length="500" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-many field="ufr" target-entity="Ufr" inversed-by="localisation" fetch="LAZY">
      <join-table name="localisation_has_ufr">
        <join-columns>
          <join-column name="localisation_id" referenced-column-name="localisation_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="ufr_id" referenced-column-name="ufr_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="labo" target-entity="Labo" inversed-by="localisation" fetch="LAZY">
      <join-table name="localisation_has_labo">
        <join-columns>
          <join-column name="localisation_id" referenced-column-name="localisation_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="labo_id" referenced-column-name="labo_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="formation" target-entity="Formation" inversed-by="localisation" fetch="LAZY">
      <join-table name="localisation_has_formation">
        <join-columns>
          <join-column name="localisation_id" referenced-column-name="localisation_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="formation_id" referenced-column-name="formation_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="etablissement" target-entity="Etablissement" inversed-by="localisation" fetch="LAZY">
      <join-table name="localisation_has_etablissement">
        <join-columns>
          <join-column name="localisation_id" referenced-column-name="localisation_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="etablissement_id" referenced-column-name="etablissement_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="ed" target-entity="Ed" inversed-by="localisation" fetch="LAZY">
      <join-table name="localisation_has_ed">
        <join-columns>
          <join-column name="localisation_id" referenced-column-name="localisation_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="ED_id" referenced-column-name="ED_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
