<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Formation" table="formation">
    <id name="formationId" type="integer" column="formation_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nom" type="string" column="nom" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="text" column="description" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="url" type="string" column="url" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="annee" type="integer" column="annee" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">Durée?</option>
      </options>
    </field>
    <field name="niveau" type="string" column="niveau" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="typediplome" type="string" column="typeDiplome" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Liste contrôlée</option>
      </options>
    </field>
    <field name="effectif" type="integer" column="effectif" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">Peut-être à creuser (avec des sous-catégories)</option>
      </options>
    </field>
    <field name="lien2" type="string" column="lien2" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="lien3" type="string" column="lien3" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="responsable" type="string" column="responsable" length="500" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">A lier à membres 
</option>
      </options>
    </field>
    <many-to-many field="membre" target-entity="Membre" mapped-by="formation" fetch="LAZY"/>
    <many-to-many field="tag" target-entity="Tag" mapped-by="formation" fetch="LAZY"/>
    <many-to-many field="theme" target-entity="Theme" mapped-by="formation" fetch="LAZY"/>
    <many-to-many field="localisation" target-entity="Localisation" mapped-by="formation" fetch="LAZY"/>
    <many-to-many field="labo" target-entity="Labo" mapped-by="formation" fetch="LAZY"/>
    <many-to-many field="etablissement" target-entity="Etablissement" mapped-by="formation" fetch="LAZY"/>
    <many-to-many field="metier" target-entity="Metier" inversed-by="formation" fetch="LAZY">
      <join-table name="formation_has_metier">
        <join-columns>
          <join-column name="formation_id" referenced-column-name="formation_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="metier_id" referenced-column-name="metier_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="ufr" target-entity="Ufr" inversed-by="formation" fetch="LAZY">
      <join-table name="formation_has_ufr">
        <join-columns>
          <join-column name="formation_id" referenced-column-name="formation_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="ufr_id" referenced-column-name="ufr_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="discipline" target-entity="Discipline" mapped-by="formation" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
