<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Tag" table="tag">
    <id name="tagId" type="integer" column="tag_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nom" type="string" column="nom" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="text" column="description" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Facultatif - voir si on lâ€™utilise vraiment</option>
      </options>
    </field>
    <many-to-many field="formation" target-entity="Formation" inversed-by="tag" fetch="LAZY">
      <join-table name="tag_has_formation">
        <join-columns>
          <join-column name="tag_id" referenced-column-name="tag_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="formation_id" referenced-column-name="formation_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="axe" target-entity="Axe" mapped-by="tag" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
