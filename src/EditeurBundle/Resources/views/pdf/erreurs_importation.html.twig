<page backtop="150px" backbottom="20px">
    <page_header>
        <div class="column float-left">
            <a href="http://hesam.eu"><img src="img/Logo_HESAM_72dpi_RVB.jpg" class="responsive-img logo-hesam-small" alt="Logo HESAM Université"></a>
        </div>
        <div class="column float-right">
            {{ "now"|date("d/m/Y") }}
        </div>
        <h1>Carto hesam - erreurs</h1>
    </page_header>
    <page_footer>
        <div class="column float-right">
            [[page_cu]]/[[page_nb]]
        </div>
    </page_footer>

{% if informations|length > 0 %}
        <table  class="recap">
            <col style="width: 5%">
            <col style="width: 95%">
            <thead>
            <tr>
                <td>N°</td>
                <td>Message</td>
            </tr>
            </thead>
            <tbody>
            {% for key, value in informations %}
                <tr>
                    <td>{{ key + 1 }}</td>
                    <td>{{ value }}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    {% endif %}
</page>